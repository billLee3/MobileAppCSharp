<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CourseScheduleMaui.SMSPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
            <Label Text="SEND NOTES" FontSize="Body"/>
            <Entry x:Name="receipentPhone" Placeholder="Recipients Phone #"/>
            <Button x:Name="sendSMS" Text="Send Note" Clicked="sendSMS_Clicked"/>
            <Button x:Name="cancelButton" Text="Cancel" Clicked="cancelButton_Clicked"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
